<Page x:Class="Warkey.Core.Pages.WarkeyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Warkey.Core.Pages"
      xmlns:converters="clr-namespace:Warkey.Core.Converters"
      mc:Ignorable="d"
      d:DesignHeight="323"
      d:DesignWidth="388"
      Title="WarkeyPage">
    <Page.Resources>
        <converters:HotkeyToStringConverter x:Key="HotkeyToStringConverter" />
    </Page.Resources>
    <Grid>
        <Image Source="/Images/War3Inventory.png"
               Stretch="Fill"/>
        <Grid HorizontalAlignment="Right" 
              VerticalAlignment="Top" 
              Background="White" 
              Height="126" Width="300"
              Opacity="0.33" 
              RenderTransformOrigin="1,1" Margin="0,56,-20,0">
            <Grid.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="43"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Grid.RenderTransform>
        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="4" />
                <RowDefinition Height="*" />
                <RowDefinition Height="4" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.06*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="0.66*" />
            </Grid.ColumnDefinitions>

            <TextBox Background="Transparent"
                     BorderThickness="0"
                     Foreground="White"
                     FontSize="28"
                     Text="{Binding Slot1, Converter={StaticResource HotkeyToStringConverter}}"
                     HorizontalContentAlignment="Center"
                     VerticalAlignment="Stretch"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     IsReadOnly="True"
                     TextWrapping="Wrap" 
                     Grid.Row="1"
                     Grid.Column="1"
                     Margin="8"
                     Tag="Slot1"
                     KeyDown="itemSlots_Keydown" />

            <TextBox Background="Transparent"
                     BorderThickness="0"
                     Foreground="White"
                     FontSize="28"
                     Text="{Binding Slot2, Converter={StaticResource HotkeyToStringConverter}}"
                     HorizontalContentAlignment="Center"
                     VerticalAlignment="Stretch"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     Grid.Column="3"
                     Grid.Row="1"
                     Margin="8"
                     Tag="Slot2"
                     KeyDown="itemSlots_Keydown" />

            <TextBox Background="Transparent"
                     BorderThickness="0"
                     Foreground="White"
                     FontSize="28"
                     Text="{Binding Slot3, Converter={StaticResource HotkeyToStringConverter}}"
                     HorizontalContentAlignment="Center"
                     VerticalAlignment="Stretch"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     Grid.Row="3"
                     Grid.Column="1"
                     Margin="8"
                     Tag="Slot3"
                     KeyDown="itemSlots_Keydown" />

            <TextBox Background="Transparent"
                     BorderThickness="0"
                     Foreground="White"
                     FontSize="28"
                     Text="{Binding Slot4, Converter={StaticResource HotkeyToStringConverter}}"
                     HorizontalContentAlignment="Center"
                     VerticalAlignment="Stretch"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     Grid.Column="3"
                     Grid.Row="3"
                     Margin="8"
                     Tag="Slot4"
                     KeyDown="itemSlots_Keydown" />

            <TextBox Background="Transparent"
                     BorderThickness="0"
                     Foreground="White"
                     FontSize="28"
                     Text="{Binding Slot5, Converter={StaticResource HotkeyToStringConverter}}"
                     HorizontalContentAlignment="Center"
                     VerticalAlignment="Stretch"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     Grid.Row="5"
                     Grid.Column="1"
                     Margin="8"
                     Tag="Slot5"
                     KeyDown="itemSlots_Keydown" />

            <TextBox Background="Transparent"
                     BorderThickness="0"
                     Foreground="White"
                     FontSize="28"
                     Text="{Binding Slot6, Converter={StaticResource HotkeyToStringConverter}}"
                     HorizontalContentAlignment="Center"
                     VerticalAlignment="Stretch"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     Grid.Row="5"
                     Grid.Column="3"
                     Margin="8"
                     Tag="Slot6"
                     KeyDown="itemSlots_Keydown" />

        </Grid>
    </Grid>
</Page>
